<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/icon_help"
                android:contentDescription="Help Button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_help_outline_32"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spartan"
                android:text="@string/title"
                android:textSize="32dp"
                android:gravity="center"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/icon_restart"
                android:contentDescription="Restart Button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_restart_alt_32"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.google.android.material.divider.MaterialDivider
            android:layout_gravity="center"
            android:layout_marginVertical="50dp"
            app:dividerThickness="2dp"
            app:dividerColor="@color/secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            app:placeholderText="inpute text"
            android:layout_marginHorizontal="128dp"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

            <include
                layout="@layout/answer_grid"/>
        </LinearLayout>
        <include
            android:id="@+id/keyboard_include"
            layout="@layout/keyboard"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>